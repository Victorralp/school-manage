rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user owns the resource
    function isOwner(teacherId) {
      return isAuthenticated() && request.auth.uid == teacherId;
    }
    
    // Subscriptions collection rules
    match /subscriptions/{teacherId} {
      // Teachers can read their own subscription
      // Admins can read all subscriptions
      allow read: if isOwner(teacherId) || isAdmin();
      
      // Deny all write operations - only backend Cloud Functions can write
      allow write: if false;
    }
    
    // Transactions collection rules
    match /transactions/{transactionId} {
      // Teachers can read their own transactions
      // Admins can read all transactions
      allow read: if isOwner(resource.data.teacherId) || isAdmin();
      
      // Deny all write operations - only backend Cloud Functions can write
      allow write: if false;
    }
    
    // Config collection (for plan configurations)
    match /config/{document=**} {
      // Anyone authenticated can read config
      allow read: if isAuthenticated();
      
      // Only admins can write config
      allow write: if isAdmin();
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
